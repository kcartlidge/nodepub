    "lint-test": "eslint \"test/**/*.js\" --fix",
    "example": "node --trace-uncaught example/example.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kcartlidge/nodepub"
  },
  "keywords": [
