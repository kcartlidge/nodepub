  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kcartlidge/nodepub/issues"
  },
  "homepage": "https://github.com/kcartlidge/nodepub",
  "dependencies": {
    "archiver": "^5.2.0",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "chai": "4.3.x",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.3.0",
    "sinon": "9.2.x"
  }
