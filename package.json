  "description": "Create valid EPUB (v2) ebooks with metadata, contents and cover image.",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha",
    "lint": "npm run lint-src && npm run lint-example && npm run lint-test",
    "lint-src": "eslint \"src/**/*.js\" --fix",
